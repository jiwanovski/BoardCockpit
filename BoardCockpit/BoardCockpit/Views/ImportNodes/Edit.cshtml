@model BoardCockpit.Models.ImportNode

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div class="tile half bg-cyan" data-click="transform">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <fieldset>
                <legend>ImportNode</legend>

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ImportNodeID)

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.ImportID, "ImportID", htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.DropDownList("ImportID", String.Empty)
                        @Html.ValidationMessageFor(model => model.ImportID)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.ContextRef, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.ContextRef)
                        @Html.ValidationMessageFor(model => model.ContextRef)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.UnitRef, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.UnitRef)
                        @Html.ValidationMessageFor(model => model.UnitRef)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Precision, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Precision)
                        @Html.ValidationMessageFor(model => model.Precision)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Value)
                        @Html.ValidationMessageFor(model => model.Value)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
