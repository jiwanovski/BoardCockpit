@model BoardCockpit.Models.Formula

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <fieldset>
                <legend>Formula</legend>

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.FormulaID)

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </div>                

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.ChartType, "ChartType", htmlAttributes: new { @class = "control-label col-md-2", @Id = "chartTypeDD" })
                    </label>
                    <div class="input-control select size10 block" data-role="input-control">
                        @Html.DropDownList("ChartType", String.Empty)
                        @Html.ValidationMessageFor(model => model.ChartType)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Unit, "Unit", htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control select size10 block" data-role="input-control">
                        @*@Html.DropDownList("Unit", String.Empty)*@
                        @Html.EnumDropDownListFor(model => model.Unit)
                        @Html.ValidationMessageFor(model => model.Unit)                        
                    </div>
                </div>
               
                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.ToolTipDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.ToolTipDescription)
                        @Html.ValidationMessageFor(model => model.ToolTipDescription)
                    </div>
                </div>

                <div class="form-group" id="dvLinkedFormula" style="visibility:hidden">
                    <label>
                        @Html.LabelFor(model => model.LinkedFormulaID, "LinkedFormulaID", htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control select size10 block" data-role="input-control">
                        @Html.DropDownList("LinkedFormulaID", String.Empty)
                        @Html.ValidationMessageFor(model => model.LinkedFormulaID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="tile half bg-cyan">
                            <div class="tile-content icon">
                                <button class="tile half bg-cyan" type="submit"><i class="icon-floppy"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>

<script type="text/javascript">
    
        $("#ChartType").change(function () {
            
            if ($(this).val() == "DualAxesLineAndColumn") {
                $("#dvLinkedFormula").css("visibility", "visible");
            } else {
                $("#dvLinkedFormula").css("visibility", "hidden");
            }
        });
    
</script>
