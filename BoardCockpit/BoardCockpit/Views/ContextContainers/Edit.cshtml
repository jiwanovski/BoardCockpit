@model BoardCockpit.Models.ContextContainer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<div class="row">
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Details", new { id = Model.ContextContainerID })">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <fieldset>
                <legend>ContextContainer</legend>
                
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ContextContainerID)

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Year, htmlAttributes: new { @class = "control-label col-md-2" })
                        </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Year)
                        @Html.ValidationMessageFor(model => model.Year)
                    </div>
</div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.CompanyID, "CompanyID", htmlAttributes: new { @class = "control-label col-md-2" })
                        </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.DropDownList("CompanyID", String.Empty)
                        @Html.ValidationMessageFor(model => model.CompanyID)
                    </div>
</div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="tile half bg-cyan">
                            <div class="tile-content icon">
                                <button class="tile half bg-cyan" type="submit"><i class="icon-floppy"></i></button>
                            </div>
                        </div>
                    </div>
                </div>
                </fieldset>
</div>
    }
</div>
