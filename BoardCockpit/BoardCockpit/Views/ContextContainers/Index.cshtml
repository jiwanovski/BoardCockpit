@model IEnumerable<BoardCockpit.Models.ContextContainer>

@{
    ViewBag.Title = "Index";
}
@section CustomJS{
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">

    <!-- jQuery -->
    @*<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>*@

    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                searching: true,
                ordering: true
            });
        });
    </script>
}
<h2>Index</h2>

<div class="tile half bg-cyan">
    <div class="tile-content icon">
        <a href="@Url.Action("Create")">
            <i class="icon-plus-2"></i>
        </a>
    </div>
</div>
<br />

<table class="display" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ContextContainerID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ContextContainerID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ContextContainerID })
                </td>
            </tr>
        }
    </tbody>
</table>
