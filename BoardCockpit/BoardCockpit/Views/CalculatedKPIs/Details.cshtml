@model BoardCockpit.Models.CalculatedKPI

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="row">
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Edit", new { id = Model.CalculatedKPIID })">
                <i class="icon-pencil"></i>
            </a>
        </div>
    </div>
</div>
<div class="row">
    <form>
        <fieldset>
            <legend>Calculated KPIs</legend>
            <table>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Context.XbrlContextID)</strong></td>
                    <td>@Html.DisplayFor(model => model.Context.XbrlContextID)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.FormulaDetail.FormulaExpression)</strong></td>
                    <td>@Html.DisplayFor(model => model.FormulaDetail.FormulaExpression)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Value)</strong></td>
                    <td>@Html.DisplayFor(model => model.Value)</td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>
