@model BoardCockpit.Models.FinancialData

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="row">
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Edit", new { id = Model.FinancialDataID })">
                <i class="icon-pencil"></i>
            </a>
        </div>
    </div>
</div>
<div>
    <form>
        <fieldset>
            <legend>FinancialData</legend>
            <table>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Context.XbrlContextID)</strong></td>
                    <td>@Html.DisplayFor(model => model.Context.XbrlContextID)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Unit.XbrlUnitID)</strong></td>
                    <td>@Html.DisplayFor(model => model.Unit.XbrlUnitID)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Precision)</strong></td>
                    <td>@Html.DisplayFor(model => model.Precision)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Value)</strong></td>
                    <td>@Html.DisplayFor(model => model.Value)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.XbrlName)</strong></td>
                    <td>@Html.DisplayFor(model => model.XbrlName)</td>
                </tr>
            </table>
        </fieldset>
    </form>
</div>