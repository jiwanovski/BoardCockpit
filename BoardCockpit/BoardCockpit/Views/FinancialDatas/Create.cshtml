@model BoardCockpit.Models.FinancialData

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="row">
    <div class="tile half bg-cyan" data-click="transform">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <fieldset>
                <legend>FinancialData</legend>

                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Precision, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Precision)
                        @Html.ValidationMessageFor(model => model.Precision)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Value)
                        @Html.ValidationMessageFor(model => model.Value)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.XbrlName, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.XbrlName)
                        @Html.ValidationMessageFor(model => model.XbrlName)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.ContextID, "ContextID", htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.DropDownList("ContextID", String.Empty)
                        @Html.ValidationMessageFor(model => model.ContextID)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.UnitID, "UnitID", htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.DropDownList("UnitID", String.Empty)
                        @Html.ValidationMessageFor(model => model.UnitID)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
