@model IEnumerable<BoardCockpit.Models.TaxonomyFileNode>

@{
    ViewBag.Title = "Index";
}

@section CustomJS{
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">

    <!-- jQuery -->
    @*<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>*@

    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                searching: true,
                ordering: true
            });
        });
    </script>
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="display" id="table_id">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaxonomyFile.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NodeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LabelDE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TaxonomyID)
            </th>
            <th>
                Häufigkeit
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxonomyFile.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NodeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LabelDE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TaxonomyID)
                </td>
                <td>
                    @{
                        List<BoardCockpit.Models.FinancialData> financialDatas = ViewBag.FinancialDatas;
                        int i = financialDatas.Where(j => j.XbrlName == item.NodeName).Count();
                        @:@i
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TaxonomyFileNodeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TaxonomyFileNodeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.TaxonomyFileNodeID })
                </td>
            </tr>
        }
    </tbody>

</table>
