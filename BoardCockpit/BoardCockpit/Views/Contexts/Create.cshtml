@model BoardCockpit.Models.Context

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<div class="row">
    <div class="tile half bg-cyan" data-click="transform">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <fieldset>
                <legend>Context</legend>

                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.XbrlContextID, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.XbrlContextID)
                        @Html.ValidationMessageFor(model => model.XbrlContextID)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.StartDate)
                        @Html.ValidationMessageFor(model => model.StartDate)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.EndDate)
                        @Html.ValidationMessageFor(model => model.EndDate)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.Instant, htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.EditorFor(model => model.Instant)
                        @Html.ValidationMessageFor(model => model.Instant)
                    </div>
                </div>

                <div class="form-group">
                    <label>
                        @Html.LabelFor(model => model.CompanyID, "CompanyID", htmlAttributes: new { @class = "control-label col-md-2" })
                    </label>
                    <div class="input-control text size10 block" data-role="input-control">
                        @Html.DropDownList("CompanyID", String.Empty)
                        @Html.ValidationMessageFor(model => model.CompanyID)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>
    

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
