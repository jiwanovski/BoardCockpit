@model BoardCockpit.Models.FormulaDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<div class="row">
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Index")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Edit", new { id = Model.FormulaDetailID })">
                <i class="icon-pencil"></i>
            </a>
        </div>
    </div>
</div>
<div>
    <form>
        <fieldset>
            <legend>FormulaDetail</legend>
            <table>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Formula.Name)</strong></td>
                    <td>@Html.DisplayFor(model => model.Formula.Name)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.FormulaExpression)</strong></td>
                    <td>@Html.DisplayFor(model => model.FormulaExpression)</td>
                </tr>
            </table>
        </fieldset>
    </form>  
</div>
