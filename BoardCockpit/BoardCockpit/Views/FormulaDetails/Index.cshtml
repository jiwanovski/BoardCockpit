@model IEnumerable<BoardCockpit.Models.FormulaDetail>

@{
    ViewBag.Title = "Index";
}
@section CustomJS{
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">

    <!-- jQuery -->
    @*<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>*@

    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                searching: true,
                ordering: true,
                language: {
                    url: '//cdn.datatables.net/plug-ins/725b2a2115b/i18n/German.json'
                }
            });
        });
    </script>
}
<h2>Index</h2>
<div class="row">
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Index","Formulas")">
                <i class="icon-undo"></i>
            </a>
        </div>
    </div>
    <div class="tile half bg-cyan">
        <div class="tile-content icon">
            <a href="@Url.Action("Create",new { formulaID = ViewBag.FormulaID })">
                <i class="icon-plus-2"></i>
            </a>
        </div>
    </div>
</div>
    <br />


    <table class="display" id="table_id">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Formula.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FormulaExpression)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Formula.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormulaExpression)
                    </td>
                    <td>
                        <div class="toolbar transparent">
                            <button class="toolbar transparent" onclick="location.href='@Url.Action("Edit", new { id = item.FormulaDetailID })'" data-hint="Ändern|Klicken Sie zum Ändern." data-hint-position="top">
                                <i class="icon-pencil on-left">
                                </i>
                            </button>
                            <span class="divider"></span>
                            <button class="toolbar fg-red" onclick="location.href='@Url.Action("Delete", new { id = item.FormulaDetailID })'" data-hint="Löschen|Klicken Sie zum Löschen." data-hint-position="top">
                                <i class="icon-remove">
                                </i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
