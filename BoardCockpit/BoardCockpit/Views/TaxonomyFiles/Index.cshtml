@model IEnumerable<BoardCockpit.Models.TaxonomyFile>

@{
    ViewBag.Title = "Index";
}
@section CustomJS{
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.2/css/jquery.dataTables.css">

    <!-- jQuery -->
    @*<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>*@

    <!-- DataTables -->
    <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.2/js/jquery.dataTables.js"></script>

    <script>
        $(document).ready(function () {
            $('#table_id').DataTable({
                searching: true,
                ordering: true
            });
        });
    </script>
}
<h2>Index</h2>
<div class="row">
    <div class="tile half bg-cyan" data-click="transform">
        <div class="tile-content icon">
            <a href="@Url.Action("Create")">
                <i class="icon-plus-2"></i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <table class="display" id="table_id">
        <thead>
            <tr>
                <th style="text-align:left">
                    @Html.DisplayNameFor(model => model.Taxonomy.Name)
                </th>
                <th style="text-align:left">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="text-align:left">
                    @Html.DisplayNameFor(model => model.FileName)
                </th>
                <th style="text-align:left">
                    @Html.DisplayNameFor(model => model.Path)
                </th>
                <th style="text-align:left">
                    @Html.DisplayNameFor(model => model.FullFilePath)
                </th>
                <th style="text-align:left">
                    Aktionen
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Taxonomy.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FileName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Path)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullFilePath)
                    </td>
                    <td>
                        <div class="toolbar transparent">
                            <button class="toolbar transparent" onclick="location.href='@Url.Action("Details", new { id = item.TaxonomyFileID })'">
                                <i class="icon-folder-2 on-left">
                                </i>
                            </button>
                            <span class="divider"></span>
                            <button class="toolbar fg-red" onclick="location.href='@Url.Action("Delete", new { id = item.TaxonomyFileID })'">
                                <i class="icon-remove">
                                </i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>